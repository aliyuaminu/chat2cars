<% include ../partials/top-btn %>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <% if(members == null) { %>
                    <h1 style="text-align: center;">No single members yet...</h1>
                    <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name </th>
                                    <th>Phone </th>
                                    <th>State </th>
                                    <th>LGA</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% members.forEach((member, key) => { %>
                                <tr>
                                    <td><%= key + 1 %></td>
                                    <td><%= member.fullname %></td>
                                    <td><%= member.mobile %></td>
                                    <td><%= member.state %></td>
                                    <td><%= member.lga %></td>
                                    <td>
                                        <!--<button type="button" class="btn btn-outline btn-success btn-circle view-member" data-id="<%= member.id %>">
                                            <i class="fa fa-search"></i>
                                        </button>-->
                                        <button type="button" class="btn btn-outline btn-danger btn-circle remove-member" data-id="<%= member.id %>"> 
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    let script  = document.createElement('script');
    script.type = 'application/javascript';
    script.src  = '/js/members.js';
    document.body.appendChild(script);
</script>